{
	"name": "dong-chinese-v2",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:unit": "vitest",
		"test:coverage": "vitest run --coverage",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"auth:schema": "npx @better-auth/cli generate --config src/lib/server/auth.ts --output src/lib/server/db/auth.schema.ts --yes",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"import:users": "tsx scripts/import-meteor-users.ts",
		"dictionary:import-unihan": "tsx scripts/dictionary/import-unihan.ts",
		"dictionary:import-cedict": "tsx scripts/dictionary/import-cedict.ts",
		"dictionary:import-shuowen": "tsx scripts/dictionary/import-shuowen.ts",
		"dictionary:import-animcjk": "tsx scripts/dictionary/import-animcjk.ts",
		"dictionary:import-makemeahanzi": "tsx scripts/dictionary/import-makemeahanzi.ts",
		"dictionary:import-baxter-sagart": "tsx scripts/dictionary/import-baxter-sagart.ts",
		"dictionary:import-zhengzhang": "tsx scripts/dictionary/import-zhengzhang.ts",
		"dictionary:import-jun-da-char-freq": "tsx scripts/dictionary/import-jun-da-char-freq.ts",
		"dictionary:import-subtlex-ch": "tsx scripts/dictionary/import-subtlex-ch.ts",
		"dictionary:import-dong-dictionary": "tsx scripts/dictionary/import-dong-dictionary.ts",
		"dictionary:sync": "npm run dictionary:import-unihan && npm run dictionary:import-cedict && npm run dictionary:import-shuowen && npm run dictionary:import-animcjk && npm run dictionary:import-makemeahanzi && npm run dictionary:import-baxter-sagart && npm run dictionary:import-zhengzhang && npm run dictionary:import-jun-da-char-freq && npm run dictionary:import-subtlex-ch && npm run dictionary:import-dong-dictionary"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^5.0.1",
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.58.1",
		"@storybook/addon-a11y": "^10.2.8",
		"@storybook/addon-docs": "^10.2.8",
		"@storybook/addon-svelte-csf": "^5.0.10",
		"@storybook/addon-vitest": "^10.2.8",
		"@storybook/sveltekit": "^10.2.8",
		"@sveltejs/adapter-node": "^5.5.2",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/bcryptjs": "^2.4.6",
		"@types/node": "^24",
		"@types/nodemailer": "^7.0.9",
		"@vitest/browser-playwright": "^4.0.18",
		"@vitest/coverage-v8": "^4.0.18",
		"better-auth": "^1.4.18",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-storybook": "^10.2.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.3.0",
		"mongodb": "^7.1.0",
		"playwright": "^1.58.1",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"storybook": "^10.2.8",
		"svelte": "^5.49.2",
		"svelte-check": "^4.3.6",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.18",
		"vitest-browser-svelte": "^2.0.2"
	},
	"dependencies": {
		"bcryptjs": "^3.0.3",
		"lucide-svelte": "^0.564.0",
		"nodemailer": "^8.0.1",
		"postgres": "^3.4.8"
	}
}
